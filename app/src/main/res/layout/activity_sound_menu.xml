<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/spiration_dark_repeating"
    tools:context="com.example.unais.kidsventure.SoundActivityMenu">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/MathActivity"
        android:src="@drawable/sound_activity"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/alphabets"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="117dp"
        android:id="@+id/SoundActivity_Alphabets"
        android:layout_below="@+id/SoundActivity_MusicalInstuments"
        android:layout_alignLeft="@+id/SoundActivity_MusicalInstuments"
        android:layout_alignStart="@+id/SoundActivity_MusicalInstuments"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/SoundActivity_Animals"
        android:layout_width="180dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="117dp"
        android:src="@drawable/animals_icon"
        tools:layout_editor_absoluteY="100dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/MathActivity"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/SoundActivity_MusicalInstuments"
        android:layout_width="180dp"
       android:src="@drawable/musical_instuments_icon"

        android:layout_height="120dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_below="@+id/SoundActivity_Animals"
        android:layout_alignLeft="@+id/SoundActivity_Animals"
        android:layout_alignStart="@+id/SoundActivity_Animals"
        android:layout_marginTop="9dp" />

    <ImageView
        android:id="@+id/BackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_btn"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />
</RelativeLayout>
