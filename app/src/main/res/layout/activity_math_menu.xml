<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/spiration_dark_repeating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unais.kidsventure.MathActivityMenu">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/MathActivity"
        android:src="@drawable/math_activity"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:src="@drawable/compare_numbers_icon"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="117dp"
        android:id="@+id/MathActivity_BigSmall"
        android:layout_below="@+id/MathActivity_Sums"
        android:layout_alignLeft="@+id/MathActivity_Counting"
        android:layout_alignStart="@+id/MathActivity_Counting" />

    <ImageView
        android:id="@+id/MathActivity_Counting"
        android:layout_width="180dp"
        android:layout_height="120dp"
        tools:layout_editor_absoluteX="117dp"
        android:src="@drawable/counting_icon"
        tools:layout_editor_absoluteY="100dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/MathActivity"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/MathActivity_Sums"
        android:layout_width="180dp"
        android:src="@drawable/sums_icon"

        android:layout_height="120dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_below="@+id/MathActivity_Counting"
        android:layout_alignLeft="@+id/MathActivity_BigSmall"
        android:layout_alignStart="@+id/MathActivity_BigSmall" />

    <ImageView
        android:id="@+id/BackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
       android:src="@drawable/back_btn"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

</RelativeLayout>
