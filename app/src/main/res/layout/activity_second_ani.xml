<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/halftone_yellow"
    tools:context="com.example.unais.kidsventure.secondAni">

    <ImageView
        android:id="@+id/imnxt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/bt2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/bt2"
        app:srcCompat="@drawable/btnext" />

    <ImageView
        android:id="@+id/imbck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@drawable/btbck" />

    <TextView
        android:id="@+id/tvnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt1"
        android:layout_alignStart="@+id/bt1"
        android:layout_alignTop="@+id/imnxt"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/soundimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imbck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        app:srcCompat="@drawable/sound_icon" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_above="@+id/tvnswer"
        android:layout_alignLeft="@+id/imbck"
        android:layout_alignStart="@+id/imbck"
        android:layout_marginBottom="40dp"
        android:background="@drawable/lionnn" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/bt1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/doggg" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvnswer"
        android:layout_alignStart="@+id/tvnswer"
        android:layout_below="@+id/bt2"
        android:text="Lion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt2"
        android:layout_alignStart="@+id/bt2"
        android:layout_below="@+id/bt2"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="Dog"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

</RelativeLayout>
