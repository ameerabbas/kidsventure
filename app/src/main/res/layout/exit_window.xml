<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/exittag"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:text="Want to Leave Activity?"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:paddingTop="25sp"
        android:paddingLeft="25sp"
        android:paddingRight="25sp"
        android:paddingBottom="100sp"
        android:background="@drawable/spiration_dark_repeating"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="113dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="250dp" />
    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="Yes"
        android:textSize="18dp"
        android:id="@+id/yesbut"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignTop="@+id/nobut"
        android:layout_alignLeft="@+id/exittag"
        android:layout_alignStart="@+id/exittag"/>
    <Button
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:text="No"
        android:textSize="18dp"
        android:id="@+id/nobut"
        android:layout_alignBottom="@+id/exittag"
        android:layout_alignRight="@+id/exittag"
        android:layout_alignEnd="@+id/exittag"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="17dp" />


</RelativeLayout>