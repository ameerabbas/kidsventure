<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/halftone_yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unais.kidsventure.animalimgscr">

    <TextView
        android:id="@+id/scoreText"
        android:textSize="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="#05505A"
        android:layout_marginBottom="293dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:id="@+id/comments"
        android:layout_above="@+id/scoreText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />

    <ImageView
        android:id="@+id/playAgain"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_above="@+id/mainMenu"
        android:layout_alignLeft="@+id/mainMenu"
        android:layout_alignStart="@+id/mainMenu" />
    <ImageView
        android:id="@+id/mainMenu"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
