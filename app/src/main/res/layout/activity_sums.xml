<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/halftone_yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_sums"
    tools:context="com.example.unais.kidsventure.Sums">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:src="@drawable/add_subtract"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/close_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/close"
        android:id="@+id/close_button"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/option3"
        android:layout_alignEnd="@+id/option3" />




    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/imgRandom"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:id="@+id/option1"
        android:layout_below="@+id/imgRandom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:id="@+id/option2"
        android:layout_alignTop="@+id/option1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:id="@+id/option3"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignTop="@+id/option2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
