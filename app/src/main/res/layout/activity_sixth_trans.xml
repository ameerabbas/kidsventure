<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unais.kidsventure.fruitsimg"
    android:background="@drawable/halftone_yellow">

    <ImageView
        android:id="@+id/imvbck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:layout_marginTop="24dp"

        app:srcCompat="@drawable/btbck" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/bt2"
        android:layout_alignBottom="@+id/bt2"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:background="@drawable/r" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imvbck"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imvbck"
        android:layout_marginBottom="79dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/u"
        android:layout_marginStart="33dp" />

    <TextView
        android:id="@+id/tvanswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imvbck"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imvbck"
        android:layout_marginBottom="25dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/soundimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/imvbck"
        android:layout_marginTop="57dp"
        android:layout_toEndOf="@+id/bt2"
        android:layout_toRightOf="@+id/bt2"
        app:srcCompat="@drawable/sound_icon" />

</RelativeLayout>
