<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/spiration_dark_repeating"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unais.kidsventure.ImagesActivityMenu">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/MathActivity"
        android:src="@drawable/images_activity"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/animals_icon"
        tools:layout_editor_absoluteY="100dp"
        tools:layout_editor_absoluteX="117dp"
        android:id="@+id/ImageActivity_Animals"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/fruits_icon"
        android:layout_marginTop="22dp"
        android:id="@+id/ImageActivity_Fruits"
        android:layout_below="@+id/ImageActivity_Animals"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:src="@drawable/objects_icon"
        android:id="@+id/ImageActivity_Objects"
        android:layout_below="@+id/ImageActivity_Fruits"
        android:layout_alignLeft="@+id/ImageActivity_Fruits"
        android:layout_alignStart="@+id/ImageActivity_Fruits"
        android:layout_marginTop="17dp" />

    <ImageView
        android:id="@+id/BackBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/back_btn"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />


</RelativeLayout>
