<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/halftone_yellow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.unais.kidsventure.fifthAni">
    <ImageView
        android:id="@+id/imbck"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/btbck" />

    <ImageView
        android:id="@+id/imnxt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:srcCompat="@drawable/btnext"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="445dp" />

    <TextView
        android:id="@+id/tvanswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/imnxt"
        android:layout_alignRight="@+id/imnxt"
        android:layout_alignTop="@+id/imnxt"
        android:layout_marginTop="14dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/soundimg"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="34dp"
        app:srcCompat="@drawable/sound_icon"
        android:layout_below="@+id/imbck"
        android:layout_alignRight="@+id/tv2"
        android:layout_alignEnd="@+id/tv2" />

    <Button
        android:id="@+id/bt1"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/imbck"
        android:layout_alignStart="@+id/imbck"
        android:layout_alignTop="@+id/bt2"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/tigerrr" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="130dp"
        android:layout_height="80dp"
        android:layout_above="@+id/imnxt"
        android:layout_alignEnd="@+id/imnxt"
        android:layout_alignRight="@+id/imnxt"
        android:layout_marginBottom="32dp"
        android:background="@drawable/sheeppp" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt1"
        android:layout_alignStart="@+id/bt1"
        android:layout_below="@+id/bt1"
        android:text="Tiger"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bt2"
        android:layout_alignStart="@+id/bt2"
        android:layout_below="@+id/bt1"
        android:text="Sheep"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1">

    </TextView>

</RelativeLayout>
